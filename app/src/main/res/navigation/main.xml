        tools:layout="@layout/fragment_fab" />

    <fragment
        android:id="@+id/cardFragment"
        android:name="xyz.aprildown.theme.app.widgets.CardFragment"
        android:label="Card"
        tools:layout="@layout/fragment_card" />

    <fragment
        android:id="@+id/barFragment"
        android:name="xyz.aprildown.theme.app.widgets.BarFragment"
        android:label="Bar"
        tools:layout="@layout/fragment_bar" />

    <fragment
        android:id="@+id/dialogFragment"
        android:name="xyz.aprildown.theme.app.widgets.DialogFragment"
        android:label="Dialog"
        tools:layout="@layout/fragment_dialog" />

    <activity
        android:id="@+id/collapsingToolbarActivity"
        android:name="xyz.aprildown.theme.app.widgets.CollapsingToolbarActivity"
        android:label="Collapsing Toolbar Activity"
        tools:layout="@layout/activity_collapsing_toolbar" />

</navigation>
